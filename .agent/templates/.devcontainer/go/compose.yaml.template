# =============================================================================
# Docker Compose - Go (Fiber/Gin/Echo)
# =============================================================================
# Uso: docker compose up
# App: http://localhost:8080
# =============================================================================

services:
  database:
    image: "postgres:16-alpine"
    env_file:
      - ../.env.development
    ports:
      - "5432:5432"
    volumes:
      - postgres-data:/var/lib/postgresql/data

  app:
    image: "golang:1.22-alpine"
    ports:
      - "8080:8080"
    volumes:
      - ../:/app
      - go-cache:/go/pkg/mod
    working_dir: /app
    command: sh -c "go mod download && go run ."
    stdin_open: true
    tty: true
    env_file:
      - ../.env.development
    environment:
      - GO_ENV=development
      - CGO_ENABLED=0
    depends_on:
      - database

volumes:
  postgres-data:
  go-cache:
